@page
@using PrøveEksamen.Data;
@using PrøveEksamen.Models;
@model PrøveEksamen.Pages.BankModel
@{
}


<table class="table" style="width:300px">
    <thead>
        <tr>Bank Navn</tr>
    </thead>
    @foreach (Bank b in dbInjected.GetBanks)
        {
            <tr>
            <td><a asp-page="/Konto" asp-route-id="@b.Id">@b.Name</a> </td>
            </tr>

        @if (b.KontoList != null)
        {
            <td>
            @foreach (Konto k in b.KontoList)
            {
                        @Html.Display(k.Ejer);
                        <br/>
                        @Html.Display(k.Beloeb.ToString());
                        <br/>

            }
            </td>
        }
    }
</table>
